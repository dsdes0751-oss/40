<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Proj01" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Brand Colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/text_secondary</item>

        <!-- Background -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Proj01" parent="Base.Theme.Proj01" />

    <!-- Viewer Theme (Dark) -->
    <style name="Theme.Proj01.Viewer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_viewer</item>
        <item name="android:statusBarColor">@color/background_viewer</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorPrimary">@color/primary_blue</item>
    </style>

    <!-- AppCompat 기반의 투명 테마 정의 -->
    <style name="Theme.Proj01.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Custom Text Styles -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="CardView.App" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">20dp</item>
    </style>

</resources>
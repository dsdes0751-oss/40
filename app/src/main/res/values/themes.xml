<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 기본 앱 테마 -->
    <style name="Base.Theme.Proj01" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 색상 시스템 -->
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorOnSecondary">@color/text_inverse</item>
        <item name="colorSurface">@color/bg_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/bg_surface_alt</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>
        <item name="colorOutline">@color/border_subtle</item>
        <item name="android:colorBackground">@color/bg_app</item>

        <!-- 시스템 바 -->
        <item name="android:windowBackground">@color/bg_app</item>
        <item name="android:statusBarColor">@color/bg_app</item>
        <item name="android:navigationBarColor">@color/bg_surface</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Proj01.MaterialAlertDialog</item>
        <item name="alertDialogTheme">@style/ThemeOverlay.Proj01.MaterialAlertDialog</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Proj01.BottomSheet</item>

        <!-- 공통 텍스트 -->
        <item name="textAppearanceTitleLarge">@style/TextAppearance.App.Title</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.App.Subtitle</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.App.Body</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.App.Body</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.App.Button</item>

        <!-- 공통 컴포넌트 -->
        <item name="materialCardViewStyle">@style/Widget.Proj01.Card</item>
        <item name="buttonStyle">@style/Widget.Proj01.Button.Primary</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Proj01.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Proj01.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Proj01.Large</item>
    </style>

    <style name="Theme.Proj01" parent="Base.Theme.Proj01" />

    <!-- 뷰어 테마 -->
    <style name="Theme.Proj01.Viewer" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/bg_viewer</item>
        <item name="android:statusBarColor">@color/bg_viewer</item>
        <item name="android:navigationBarColor">@color/bg_viewer</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="colorPrimary">@color/brand_primary</item>
        <item name="colorOnPrimary">@color/brand_on_primary</item>
        <item name="colorSurface">@color/bg_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
    </style>

    <!-- 오버레이용 반투명 테마 -->
    <style name="Theme.Proj01.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 타이포 -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_muted</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_inverse</item>
    </style>

    <!-- 쉐이프 -->
    <style name="ShapeAppearance.Proj01.Small" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.Proj01.Medium" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeAppearance.Proj01.Large" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">22dp</item>
    </style>

    <!-- 카드/컨테이너 -->
    <style name="Widget.Proj01.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/bg_surface</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="Widget.Proj01.Card.Flat" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/bg_surface_alt</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <!-- 버튼 -->
    <style name="Widget.Proj01.Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">@color/text_inverse</item>
    </style>

    <style name="Widget.Proj01.Button.Secondary" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.Proj01.Button.Ghost" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_ghost</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="Widget.Proj01.Button.Danger" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_button_danger</item>
        <item name="android:textColor">@color/text_inverse</item>
    </style>

    <style name="Widget.Proj01.BottomNavContainer" parent="">
        <item name="android:background">@drawable/bg_bottom_nav_container</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="Widget.Proj01.BottomNavButton.Active" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_nav_button_active</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Proj01.BottomNavButton.Inactive" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_nav_button_inactive</item>
        <item name="android:textColor">@color/text_muted</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.Proj01.TextInputLayout.Dropdown" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/bg_surface</item>
        <item name="boxStrokeColor">@color/border_strong</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/text_muted</item>
        <item name="endIconTint">@color/text_secondary</item>
    </style>

    <style name="Widget.Proj01.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.Proj01.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/bg_surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorPrimary">@color/brand_primary</item>
    </style>

    <style name="ThemeOverlay.Proj01.BottomSheet" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Proj01.BottomSheet</item>
    </style>

    <style name="Widget.Proj01.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>

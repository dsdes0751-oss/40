<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sheet_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_surface"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/novel_viewer_settings_title"
            android:textAppearance="@style/TextAppearance.App.Subtitle"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_sheet_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/common_close"
            android:src="@drawable/ic_close_24"
            android:tint="@color/text_secondary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_subtle" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/sheet_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/novel_settings_section_reading"
                android:textAppearance="@style/TextAppearance.App.Caption"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/row_setting_read_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_read_mode"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_read_mode_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_immersive"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_setting_immersive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:showText="false"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row_setting_orientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_orientation"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_orientation_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_volume_keys"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_setting_volume_keys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:showText="false"
                    android:text="" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@color/border_subtle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/novel_settings_section_display"
                android:textAppearance="@style/TextAppearance.App.Caption"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/row_setting_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:background="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_theme"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_theme_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_brightness"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_brightness_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_brightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_blue_light"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_blue_light_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_blue_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"
                android:background="@color/border_subtle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/novel_settings_section_typography"
                android:textAppearance="@style/TextAppearance.App.Caption"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_font_size"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_font_size_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_font_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_line_height"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_line_height_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_line_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_letter_spacing"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_letter_spacing_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_letter_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_paragraph_spacing"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_paragraph_spacing_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_paragraph_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_margin_left"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_margin_left_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_margin_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_margin_right"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_margin_right_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_margin_right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_margin_top"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_margin_top_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_margin_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/novel_setting_margin_bottom"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_setting_margin_bottom_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.App.Body"
                    android:textColor="@color/text_secondary" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_setting_margin_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_subtle" />

    <LinearLayout
        android:id="@+id/sheet_footer_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/novel_settings_section_data"
            android:textAppearance="@style/TextAppearance.App.Caption"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_export_current"
            style="@style/Widget.Proj01.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/novel_setting_export" />

        <Button
            android:id="@+id/btn_delete_current"
            style="@style/Widget.Proj01.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/novel_setting_delete_current"
            android:textColor="@color/status_error" />

        <Button
            android:id="@+id/btn_delete_all"
            style="@style/Widget.Proj01.Button.Danger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/novel_setting_delete_all" />
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 1. 확대 가능한 이미지 뷰 -->
    <com.github.chrisbanes.photoview.PhotoView
        android:id="@+id/photo_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/viewer_page_content_description" />

    <!-- 2. 중앙 로딩 인디케이터 -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/text_inverse"
        android:visibility="visible" />

    <!-- 3. (선택) 로딩 실패 시 보여줄 아이콘/텍스트 -->
    <TextView
        android:id="@+id/tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/viewer_error"
        android:textColor="@color/text_inverse"
        android:visibility="gone" />

</FrameLayout>

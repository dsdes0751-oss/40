<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vn_top_up_title"
            android:textColor="#1E1E1E"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/vn_credit_status_title"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progress_vn_balance"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:max="100000" />

        <TextView
            android:id="@+id/tv_vn_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/vn_percent_format"
            android:textColor="#424242"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_vn_remaining_chars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/vn_remaining_chars_format"
            android:textColor="#424242"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/vn_top_up_packages_title"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_vn_package_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/vn_package_small_label" />

        <Button
            android:id="@+id/btn_vn_package_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/vn_package_medium_label" />

        <Button
            android:id="@+id/btn_vn_package_large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/vn_package_large_label" />
    </LinearLayout>
</ScrollView>

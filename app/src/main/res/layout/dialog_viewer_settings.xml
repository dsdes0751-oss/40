<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_surface"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/viewer_settings_screen"
        android:textAppearance="@style/TextAppearance.App.Caption"
        android:textStyle="bold" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_vertical_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/viewer_settings_webtoon_mode"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_show_original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/viewer_settings_show_original"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:background="@color/border_subtle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/viewer_settings_controls"
        android:textAppearance="@style/TextAppearance.App.Caption"
        android:textStyle="bold" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/viewer_settings_volume_keys"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:background="@color/border_subtle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/viewer_settings_cover"
        android:textAppearance="@style/TextAppearance.App.Caption"
        android:textStyle="bold" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_hide_current_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/viewer_settings_hide_this_cover"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_hide_all_covers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/viewer_settings_hide_all_covers"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:background="@color/border_subtle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/settings_data_management"
        android:textAppearance="@style/TextAppearance.App.Caption"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_export_current"
        style="@style/Widget.Proj01.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/viewer_settings_export_current"
        android:textColor="@color/status_info"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_delete_current"
        style="@style/Widget.Proj01.Button.Secondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/viewer_settings_delete_current"
        android:textColor="@color/status_error"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_delete_all"
        style="@style/Widget.Proj01.Button.Danger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/viewer_settings_delete_all"
        android:textStyle="bold" />

</LinearLayout>

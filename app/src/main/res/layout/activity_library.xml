<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp">

        <TextView
            android:id="@+id/tv_library_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/library_title"
            android:textAppearance="@style/TextAppearance.App.Title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bookshelf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="14dp"
            android:clipToPadding="false"
            android:paddingHorizontal="14dp"
            android:paddingBottom="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_library_title" />

        <TextView
            android:id="@+id/tv_library_empty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="28dp"
            android:text="@string/library_empty_message"
            android:textColor="@color/text_muted"
            android:textSize="15sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/rv_bookshelf"
            app:layout_constraintEnd_toEndOf="@id/rv_bookshelf"
            app:layout_constraintStart_toStartOf="@id/rv_bookshelf"
            app:layout_constraintTop_toTopOf="@id/rv_bookshelf" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        style="@style/Widget.Proj01.BottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_nav_main"
            style="@style/Widget.Proj01.BottomNavButton.Inactive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_main" />

        <Button
            android:id="@+id/btn_nav_library"
            style="@style/Widget.Proj01.BottomNavButton.Active"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/nav_library" />
    </LinearLayout>

</FrameLayout>

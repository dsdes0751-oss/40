<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="96dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vn_game_translation_title"
                android:textAppearance="@style/TextAppearance.App.Title" />

            <androidx.cardview.widget.CardView
                style="@style/Widget.Proj01.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Proj01.TextInputLayout.Dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/vn_source_lang_label">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spinner_vn_source_lang"
                            style="@style/Widget.Proj01.AutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.Proj01.TextInputLayout.Dropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="@string/vn_target_lang_label">

                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/spinner_vn_target_lang"
                            style="@style/Widget.Proj01.AutoCompleteTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="none" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/btn_vn_start_translation"
                        style="@style/Widget.Proj01.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/vn_start_translation"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/Widget.Proj01.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="14dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vn_credit_status_title"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold" />

                    <ProgressBar
                        android:id="@+id/progress_vn_balance"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:max="100000" />

                    <TextView
                        android:id="@+id/tv_vn_percent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/vn_percent_format"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_vn_remaining_chars"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/vn_remaining_chars_format"
                        android:textColor="@color/text_secondary"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_vn_top_up"
                        style="@style/Widget.Proj01.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/vn_top_up_button" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_nav"
        style="@style/Widget.Proj01.BottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="12dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_nav_main"
            style="@style/Widget.Proj01.BottomNavButton.Active"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nav_main" />

        <Button
            android:id="@+id/btn_nav_library"
            style="@style/Widget.Proj01.BottomNavButton.Inactive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="@string/nav_library" />
    </LinearLayout>
</FrameLayout>
